<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            
    <ImageView
        android:id="@+id/iv_imageFlower"
        android:layout_width="0dp"
        tools:src="@drawable/ic_launcher_background"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="0dp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/iv_imageFlower"
        android:background="@color/divider"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_tittle"
        android:textSize="16sp"
        tools:text="Horizontem"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider"
        android:layout_width="0dp"
        app:layout_constraintBottom_toTopOf="@id/tv_descr"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_descr"
        android:textSize="12sp"
        android:textStyle="italic"
        tools:text="Beautiful flower"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintTop_toBottomOf="@id/tv_tittle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>